<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/layout_themKH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_maKH">

                <TextView
                    android:id="@+id/lblMaLoai"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="Mã loại"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/them_MaLoai"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toEndOf="@+id/lblMaLoai"
                    android:layout_toRightOf="@+id/them_maKH"
                    android:hint="Nhập mã loại"
                    android:textColorHint="#CFD8D7" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_diachiKH">
                <TextView
                    android:id="@+id/them_diachiKH"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Tên Loại "
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />
                <EditText
                    android:layout_width="400dp"
                    android:layout_marginLeft="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/them_diachiKH"
                    android:id="@+id/them_TenLoai"
                    android:hint="Nhập "
                    android:textColorHint="#CFD8D7"
                    />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>